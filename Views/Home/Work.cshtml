@{
    ViewData["Title"] = "Take a Look at My Portfolio!";
    ViewData["BodyClass"] = "work-background";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<section class="custom-card-work">
    <div class="row align-items-center">
        <!-- Text Column -->
        <div class="col-md-6 text-black card-text">
            <h1>StoryBoarding</h1>
            <p>
                Storyboarding is a core part of what we do here at TheUniverseBook: Studios.
                We specialize in turning scripts, books, and rough ideas into clear, engaging visual plans, 
                regardless of whether you're creating an animation, comic, or another visual project. 
                From animatic-ready storyboards to comic page layouts, we help bring your story to life, beat by beat.
                Looking for a collaborator to help shape your project visually? Let's work together!
            </p>
        </div>
        <!-- Storyboarding Carousel Column -->
        <div class="col-md-6">
            <div id="storyboardCarousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="/images/StoryboardOne.jpg" class="d-block w-100" alt="Storyboards Image 1">
                    </div>
                    <div class="carousel-item">
                        <img src="/images/StoryboardThree.jpg" class="d-block w-100" alt="Storyboards Image 3">
                    </div>
                    <div class="carousel-item">
                        <img src="/images/StoryboardFour.jpg" class="d-block w-100" alt="Storyboards Image 4">
                    </div>
                    <div class="carousel-item">
                        <img src="/images/StoryboardFive.jpg" class="d-block w-100" alt="Storyboards Image 5">
                    </div>
                    <div class="carousel-item">
                        <img src="/images/StoryboardSix.jpg" class="d-block w-100" alt="Storyboards Image 6">
                    </div>
                    <div class="carousel-item">
                        <img src="/images/StoryboardSeven.jpg" class="d-block w-100" alt="Storyboards Image 7">
                    </div>
                    <div class="carousel-item">
                        <img src="/images/StoryboardEight.jpg" class="d-block w-100" alt="Storyboards Image 8">
                    </div>
                    <!-- Add more carousel items as needed -->
                </div>
                <button class="carousel-control-prev bg-black bg-opacity-25" type="button" data-bs-target="#storyboardCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
